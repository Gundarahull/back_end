<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Chat App</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* styles.css */
        body {
            background-color: #e5ddd5; /* WhatsApp background color */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        #chat-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            overflow-y: auto;
            height: 80vh;
        }

        .message {
            margin-bottom: 20px;
            overflow: auto;
        }

        .username {
            font-weight: bold;
        }

        .content {
            padding: 10px;
            border-radius: 10px;
            max-width: 70%;
            word-wrap: break-word;
        }

        .message.me .content {
            background-color: #dcf8c6; /* WhatsApp green */
            float: right;
        }

        .message.other .content {
            background-color: #fff;
            float: left;
        }

        /* WhatsApp-style form */
        #message-form {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #f4f5f8; /* WhatsApp chat input background color */
            padding: 10px;
            display: flex;
            align-items: center;
        }

        #username-input,
        #message-input {
            padding: 10px;
            margin: 5px;
            border: none;
            border-radius: 20px;
            flex: 1;
        }

        #send-button {
            padding: 10px 20px;
            margin: 5px;
            border: none;
            border-radius: 20px;
            background-color: #128c7e; /* WhatsApp send button color */
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #send-button:hover {
            background-color: #075e54; /* WhatsApp send button hover color */
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <% if (chats.length === 0) { %>
            <div class="message">
                <div class="content">No chats</div>
            </div>
        <% } else { %>
            <% for (let chat of chats) { %>
                <div class="message <%= chat.isMe ? 'me' : 'other' %>">
                    <div class="username"><%= chat.username %>:</div>
                    <div class="content"><%= chat.message %><br>
                        <%= chat.createdAt %>
                    </div>
                   
                </div>
            <% } %>
        <% } %>
    </div>
    <form id="message-form" action="/chat" method="post">
        <input type="text" id="username-input" name="username" placeholder="Your Username" required>
        <input type="text" id="message-input" name="message" placeholder="Type your message..." required>
        <button type="submit" id="send-button">Send</button>
    </form>
    <script>
        // Add your JavaScript code here if needed
    </script>
</body>
</html>
